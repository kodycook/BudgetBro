<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityMain" >
    <TextView
        android:layout_width="368dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/balanceString"
        android:id="@+id/balanceText"
        tools:layout_editor_absoluteX="8dp" />
    <Button
        android:text="Add Transaction"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/balanceText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/addButton" />
    <Button
        android:text="Configure"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/balanceText"
        app:layout_constraintLeft_toRightOf="@+id/addButton"
        android:id="@+id/configureButton" />
    <Button
        android:text="History"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:onClick="sendMessage"
        app:layout_constraintTop_toBottomOf="@+id/configureButton"
        app:layout_constraintLeft_toRightOf="@+id/addButton"
        android:layout_toRightOf="@+id/addButton"
        android:id="@+id/historyButton" />

</android.support.constraint.ConstraintLayout>
